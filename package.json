{
  "name": "eccoxvision",
  "productName": "EccoxVision",
  "version": "1.0.0",
  "description": "EccoxVision - Monitoramento e Observabilidade de Serviços e Recursos Mainframe. Aplicação desktop multiplataforma desenvolvida com Electron, Next.js, TailwindCSS e TypeScript.",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "next dev",
    "build:next": "next build",
    "move:out": "node move-out.js",
    "build:electron": "tsc -p electron/tsconfig.electron.json && node move-assets.js",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron electron/dist/main.js\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "build:app": "npm run build:next && npm run move:out && npm run build:electron && electron-builder",
    "db:setup": "ts-node scripts/setup-db.ts",
    "db:import-mock": "ts-node scripts/import-mock.ts",
    "build:scripts": "tsc scripts/*.ts --outDir dist/scripts"
  },
  "build": {
    "appId": "com.eccox.eccoxvision",
    "productName": "EccoxVision",
    "files": [
      "electron/dist/**/*",
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "electron/assets"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "electron/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EccoxVision"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.12",
    "next": "^15.3.1",
    "react": "^18.2.0",
    "react-day-picker": "^9.10.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "19.1.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.9",
    "fs-extra": "^11.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.4.5",
    "wait-on": "^7.0.1"
  },
  "keywords": [],
  "author": "Diogo",
  "license": "ISC"
}
