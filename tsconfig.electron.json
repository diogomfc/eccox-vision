{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./electron/dist",
    "rootDir": "./",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./electron/**/*",
    "./src/types/**/*",
    "./src/server/repositories/**/*",
    "./src/server/db.ts"
  ],
  "exclude": [
    "./electron/dist/**/*",
    "./node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}